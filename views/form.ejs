        <H1>Vamos cadastrar um novo prato!?</H1>

<form method="POST">
    <section class="card-container" id="form">
        <section class="card-title">
            <label for="recipe_name">Nome da Receita:</label>
            <input type="text" name="recipe_name" class="recipe_name" placeholder="Digite o nome do prato" required>
        </section>
        <section class="recipe-image">
            <label for="recipe_image_url">Foto da receita!:</label>
            <input type="text" name="recipe_image_url" id="recipe_image_url" placeholder="URL da foto aqui." required>
        </section>
          
        <section class="card-items">
        <span class="card-item-title">Ingredients</span>
        <ul class="checkmark">
        <li>
            <label for="recipe_ingredients">Ingredientes da Receita:</label>
            <input type="text" name="recipe_ingredients" class="recipe_ingredients" placeholder="Ingredientes do prato" required>
        </li>
        </ul>
        </section>
         
        <section class="method">
        <span class="card-item-title">Method</span>
        <ol>
        <li>
            <label for="recipe_prep_method">Modo de Preparo:</label>
            <input type="text" name="recipe_prep_method" class="recipe_prep_method" placeholder="Modo de preparo do prato" required>
        </li>
        </ol>
        </section>
    </section>
</form>

        

    
        
